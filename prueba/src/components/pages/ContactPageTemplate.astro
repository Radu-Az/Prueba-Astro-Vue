---
import ContactBudgetEstimatorIsland from "../ContactBudgetEstimatorIsland.vue";
import ContactScheduleSelectorIsland from "../ContactScheduleSelectorIsland.vue";
import SiteFooter from "../SiteFooter.astro";
import SiteHeader from "../SiteHeader.astro";
import BaseSiteLayout from "../../layouts/BaseSiteLayout.astro";
import type { SiteDictionary } from "../../i18n/dictionaries";
import type { AppLang } from "../../i18n/languages";

interface ContactPageTemplateProps {
  lang: AppLang;
  dictionary: SiteDictionary;
}

const { lang, dictionary } = Astro.props as ContactPageTemplateProps;
const contactCopy = dictionary.contact;

const CONTACT_EMAIL = "hola@orbitweb.studio";
const CONTACT_PHONE = "+34 910 123 456";
const EMAIL_PLACEHOLDER = "tu@email.com";
const PHONE_PLACEHOLDER = "+34 600 000 000";
---

<BaseSiteLayout lang={lang} title={dictionary.meta.contactTitle} description={dictionary.meta.contactDescription}>
  <SiteHeader lang={lang} copy={dictionary.header} />

  <main class="relative overflow-hidden bg-gradient-to-b from-slate-50 via-white to-slate-50 py-16 sm:py-20 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950">
    <div class="absolute -left-24 top-16 -z-10 h-72 w-72 rounded-full bg-cyan-100/50 blur-3xl dark:bg-cyan-500/20"></div>

    <section class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="grid items-start gap-10 lg:grid-cols-[0.92fr_1.08fr]">
        <aside
          class="rounded-3xl border border-slate-200/80 bg-white/90 p-8 shadow-sm shadow-slate-200/70 dark:border-slate-700/80 dark:bg-slate-900/70 dark:shadow-slate-950/40"
          data-reveal="left"
        >
          <p class="text-xs font-semibold uppercase tracking-[0.16em] text-cyan-700 dark:text-cyan-300">{contactCopy.aside.kicker}</p>
          <h1 class="mt-3 text-4xl text-slate-900 sm:text-5xl dark:text-slate-100">{contactCopy.aside.title}</h1>
          <div class="prose prose-slate mt-5 max-w-lg dark:prose-invert">
            <p>{contactCopy.aside.description}</p>
          </div>

          <div class="mt-8 space-y-4 text-slate-600 dark:text-slate-300">
            <p>
              <span class="font-semibold text-slate-900 dark:text-slate-100">{contactCopy.aside.emailLabel}</span>
              <span> {CONTACT_EMAIL}</span>
            </p>
            <p>
              <span class="font-semibold text-slate-900 dark:text-slate-100">{contactCopy.aside.phoneLabel}</span>
              <span> {CONTACT_PHONE}</span>
            </p>
            <p>
              <span class="font-semibold text-slate-900 dark:text-slate-100">{contactCopy.aside.scheduleLabel}</span>
              <span> {contactCopy.aside.scheduleValue}</span>
            </p>
          </div>
        </aside>

        <form
          class="rounded-3xl border border-slate-200/80 bg-white p-6 shadow-lg shadow-slate-200/70 sm:p-8 dark:border-slate-700/80 dark:bg-slate-900/70 dark:shadow-slate-950/40"
          data-reveal="right"
          style="transition-delay: 90ms;"
        >
          <div class="grid gap-5 sm:grid-cols-2">
            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">{contactCopy.form.name}</span>
              <input
                type="text"
                name="name"
                required
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder:text-slate-400 dark:focus:border-cyan-400 dark:focus:ring-cyan-500/20"
                placeholder={contactCopy.form.namePlaceholder}
              />
            </label>

            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">{contactCopy.form.company}</span>
              <input
                type="text"
                name="company"
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder:text-slate-400 dark:focus:border-cyan-400 dark:focus:ring-cyan-500/20"
                placeholder={contactCopy.form.companyPlaceholder}
              />
            </label>
          </div>

          <div class="mt-5 grid gap-5 sm:grid-cols-2">
            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">{contactCopy.form.email}</span>
              <input
                type="email"
                name="email"
                required
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder:text-slate-400 dark:focus:border-cyan-400 dark:focus:ring-cyan-500/20"
                placeholder={EMAIL_PLACEHOLDER}
              />
            </label>

            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">{contactCopy.form.phone}</span>
              <input
                type="tel"
                name="phone"
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder:text-slate-400 dark:focus:border-cyan-400 dark:focus:ring-cyan-500/20"
                placeholder={PHONE_PLACEHOLDER}
              />
            </label>
          </div>

          <label class="mt-5 flex flex-col gap-2">
            <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">{contactCopy.form.service}</span>
            <select
              name="service"
              class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:focus:border-cyan-400 dark:focus:ring-cyan-500/20"
            >
              {contactCopy.form.serviceOptions.map((serviceOption) => <option>{serviceOption}</option>)}
            </select>
          </label>

          <ContactBudgetEstimatorIsland client:visible copy={contactCopy.budget} />

          <ContactScheduleSelectorIsland client:load copy={contactCopy.schedule} />

          <label class="mt-5 flex flex-col gap-2">
            <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">{contactCopy.form.message}</span>
            <textarea
              name="message"
              rows={5}
              required
              class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder:text-slate-400 dark:focus:border-cyan-400 dark:focus:ring-cyan-500/20"
              placeholder={contactCopy.form.messagePlaceholder}
            ></textarea>
          </label>

          <button
            type="submit"
            class="mt-6 inline-flex items-center justify-center rounded-full bg-slate-900 px-7 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 dark:bg-cyan-400 dark:text-slate-950 dark:hover:bg-cyan-300"
          >
            {contactCopy.form.submit}
          </button>
        </form>
      </div>
    </section>
  </main>

  <SiteFooter lang={lang} copy={dictionary.footer} navCopy={dictionary.header.nav} />
</BaseSiteLayout>
