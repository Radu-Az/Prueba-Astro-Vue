---
/*
  Hero de inicio:
  - Presenta propuesta de valor.
  - Incluye CTA a contacto y servicios.
*/
import type { AppLang } from "../i18n/languages";
import { toLocalizedPath } from "../i18n/languages";

interface HeroCopy {
  title: string;
  description: string;
  primaryCta: string;
  secondaryCta: string;
}

interface HomeHeroSectionProps {
  lang: AppLang;
  copy: HeroCopy;
}

const { lang = "es", copy } = Astro.props as HomeHeroSectionProps;
---

<section class="relative overflow-hidden border-b border-slate-200/70 bg-gradient-to-b from-cyan-50/85 via-white to-cyan-50/50">
  <div class="pointer-events-none absolute -left-24 top-0 -z-10 h-80 w-80 rounded-full bg-cyan-200/35 blur-3xl"></div>
  <div class="pointer-events-none absolute right-0 top-1/3 -z-10 h-72 w-72 rounded-full bg-sky-200/25 blur-3xl"></div>

  <div class="mx-auto max-w-6xl px-6 pb-20 pt-16 sm:pt-20 lg:px-8 lg:pt-24">
    <div class="max-w-4xl">
      <h1 class="text-4xl leading-[1.05] text-slate-900 sm:text-5xl lg:text-6xl">{copy.title}</h1>

      <p class="mt-6 max-w-2xl text-lg leading-relaxed text-slate-600">{copy.description}</p>

      <div class="mt-10 flex flex-col gap-4 sm:flex-row sm:items-center">
        <a
          href={toLocalizedPath("/contacto", lang)}
          class="inline-flex w-fit items-center justify-center rounded-full bg-slate-900 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800"
        >
          {copy.primaryCta}
        </a>
        <a
          href={toLocalizedPath("/servicios", lang)}
          class="inline-flex w-fit items-center justify-center rounded-full border border-slate-300 bg-white px-8 py-3 text-sm font-semibold text-slate-700 transition hover:border-slate-400 hover:text-slate-900"
        >
          {copy.secondaryCta}
        </a>
      </div>
    </div>
  </div>
</section>
