---
/*
  Seccion de testimonios:
  - Refuerza confianza con prueba social.
*/
interface TestimonialItem {
  quote: string;
  author: string;
  role: string;
}

interface TestimonialsCopy {
  kicker: string;
  title: string;
  description: string;
  items: TestimonialItem[];
}

interface HomeTestimonialsSectionProps {
  copy: TestimonialsCopy;
}

const { copy } = Astro.props as HomeTestimonialsSectionProps;
---

<section
  id="opiniones"
  class="relative overflow-hidden bg-gradient-to-b from-sky-50/45 via-white to-slate-50/75 py-20 sm:py-24 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950"
>
  <div class="pointer-events-none absolute -left-24 bottom-0 -z-10 h-72 w-72 rounded-full bg-sky-100/45 blur-3xl dark:bg-sky-500/20"></div>
  <div class="pointer-events-none absolute right-0 top-16 -z-10 h-72 w-72 rounded-full bg-cyan-100/30 blur-3xl dark:bg-cyan-500/15"></div>

  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center" data-reveal>
      <p class="text-xs font-semibold uppercase tracking-[0.16em] text-cyan-700 dark:text-cyan-300">{copy.kicker}</p>
      <h2 class="mt-3 text-3xl text-slate-900 sm:text-4xl dark:text-slate-100">{copy.title}</h2>
      <p class="mt-4 text-slate-600 dark:text-slate-300">{copy.description}</p>
    </div>

    <div class="mt-12 grid gap-6 lg:grid-cols-3">
      {
        copy.items.map((testimonial, testimonialIndex) => (
          <article
            class="flex h-full flex-col rounded-2xl border border-slate-200/80 bg-white p-6 shadow-sm shadow-slate-200/70 dark:border-slate-700/80 dark:bg-slate-900/70 dark:shadow-slate-950/40"
            data-reveal="up"
            style={`transition-delay: ${80 + testimonialIndex * 90}ms;`}
          >
            <div class="mb-4 flex items-center gap-1 text-amber-400" aria-hidden="true">
              <span>&#9733;</span>
              <span>&#9733;</span>
              <span>&#9733;</span>
              <span>&#9733;</span>
              <span>&#9733;</span>
            </div>

            <p class="text-slate-700 dark:text-slate-300">"{testimonial.quote}"</p>

            <div class="mt-6 border-t border-slate-200 pt-4 dark:border-slate-700">
              <p class="font-semibold text-slate-900 dark:text-slate-100">{testimonial.author}</p>
              <p class="text-sm text-slate-500 dark:text-slate-400">{testimonial.role}</p>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
