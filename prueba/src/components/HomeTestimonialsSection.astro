---
/*
  Sección de testimonios:
  - Refuerza confianza con prueba social.
*/
interface TestimonialItem {
  quote: string;
  author: string;
  role: string;
}

interface TestimonialsCopy {
  kicker: string;
  title: string;
  description: string;
  items: TestimonialItem[];
}

interface HomeTestimonialsSectionProps {
  copy: TestimonialsCopy;
}

const { copy } = Astro.props as HomeTestimonialsSectionProps;
---

<section id="opiniones" class="relative overflow-hidden bg-gradient-to-b from-sky-50/45 via-white to-slate-50/75 py-20 sm:py-24">
  <div class="pointer-events-none absolute -left-24 bottom-0 -z-10 h-72 w-72 rounded-full bg-sky-100/45 blur-3xl"></div>
  <div class="pointer-events-none absolute right-0 top-16 -z-10 h-72 w-72 rounded-full bg-cyan-100/30 blur-3xl"></div>

  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <p class="text-xs font-semibold uppercase tracking-[0.16em] text-cyan-700">{copy.kicker}</p>
      <h2 class="mt-3 text-3xl text-slate-900 sm:text-4xl">{copy.title}</h2>
      <p class="mt-4 text-slate-600">{copy.description}</p>
    </div>

    <div class="mt-12 grid gap-6 lg:grid-cols-3">
      {
        copy.items.map((testimonial) => (
          <article class="flex h-full flex-col rounded-2xl border border-slate-200/80 bg-white p-6 shadow-sm shadow-slate-200/70">
            <div class="mb-4 flex items-center gap-1 text-amber-400" aria-hidden="true">
              <span>★</span>
              <span>★</span>
              <span>★</span>
              <span>★</span>
              <span>★</span>
            </div>

            <p class="text-slate-700">"{testimonial.quote}"</p>

            <div class="mt-6 border-t border-slate-200 pt-4">
              <p class="font-semibold text-slate-900">{testimonial.author}</p>
              <p class="text-sm text-slate-500">{testimonial.role}</p>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

