---
/*
  Sección FAQ:
  - Cabecera estática + acordeón interactivo.
*/
import FaqAccordionIsland from "./FaqAccordionIsland.vue";

interface FaqItem {
  question: string;
  answer: string;
}

interface FaqCopy {
  kicker: string;
  title: string;
  description: string;
  items: FaqItem[];
}

interface HomeFaqSectionProps {
  copy: FaqCopy;
}

const { copy } = Astro.props as HomeFaqSectionProps;
---

<section
  id="faq"
  class="relative overflow-hidden border-y border-slate-800/80 bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 py-20 sm:py-24"
>
  <div class="pointer-events-none absolute -left-16 top-6 -z-10 h-72 w-72 rounded-full bg-cyan-500/20 blur-3xl"></div>
  <div class="pointer-events-none absolute -right-12 bottom-0 -z-10 h-72 w-72 rounded-full bg-sky-500/15 blur-3xl"></div>

  <div class="mx-auto grid max-w-6xl gap-10 px-6 lg:grid-cols-[0.9fr_1.1fr] lg:gap-12 lg:px-8">
    <header>
      <p class="text-xs font-semibold uppercase tracking-[0.16em] text-cyan-300">{copy.kicker}</p>
      <h2 class="mt-3 text-3xl text-white sm:text-4xl">{copy.title}</h2>
      <p class="mt-4 max-w-md text-slate-300">{copy.description}</p>
    </header>

    <FaqAccordionIsland client:visible items={copy.items} />
  </div>
</section>

