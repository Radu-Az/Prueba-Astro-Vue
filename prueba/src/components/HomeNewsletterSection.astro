---
/*
  Sección newsletter:
  - Copy estático + formulario Vue.
*/
import NewsletterSignupIsland from "./NewsletterSignupIsland.vue";

interface NewsletterFormCopy {
  submitIdle: string;
  submitLoading: string;
  submitDone: string;
  invalidEmail: string;
  success: string;
}

interface NewsletterCopy {
  kicker: string;
  title: string;
  description: string;
  form: NewsletterFormCopy;
}

interface HomeNewsletterSectionProps {
  copy: NewsletterCopy;
}

const { copy } = Astro.props as HomeNewsletterSectionProps;
---

<section class="relative overflow-hidden bg-gradient-to-b from-white via-cyan-50/40 to-white py-16 sm:py-20">
  <div class="pointer-events-none absolute left-0 top-0 -z-10 h-64 w-64 rounded-full bg-cyan-100/30 blur-3xl"></div>

  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="rounded-3xl border border-slate-200/80 bg-white/90 p-8 shadow-sm shadow-slate-200/70 sm:p-10">
      <p class="text-xs font-semibold uppercase tracking-[0.16em] text-cyan-700">{copy.kicker}</p>
      <h2 class="mt-3 max-w-2xl text-3xl text-slate-900 sm:text-4xl">{copy.title}</h2>
      <p class="mt-4 max-w-2xl text-slate-600">{copy.description}</p>

      <div class="mt-7">
        <NewsletterSignupIsland client:visible copy={copy.form} />
      </div>
    </div>
  </div>
</section>

