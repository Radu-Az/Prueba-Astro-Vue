---
import BaseSiteLayout from "../../layouts/BaseSiteLayout.astro";
import SiteHeader from "../../components/SiteHeader.astro";
import SiteFooter from "../../components/SiteFooter.astro";
import ContactScheduleSelectorIsland from "../../components/ContactScheduleSelectorIsland.vue";
import ContactBudgetEstimatorIsland from "../../components/ContactBudgetEstimatorIsland.vue";
import fr from "../../i18n/fr.json";

const contactCopy = fr.contact;
---

<BaseSiteLayout lang="fr" title={fr.meta.contactTitle} description={fr.meta.contactDescription}>
  <SiteHeader lang="fr" copy={fr.header} />

  <main class="relative overflow-hidden bg-gradient-to-b from-slate-50 via-white to-slate-50 py-16 sm:py-20">
    <div class="absolute -left-24 top-16 -z-10 h-72 w-72 rounded-full bg-cyan-100/50 blur-3xl"></div>

    <section class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="grid items-start gap-10 lg:grid-cols-[0.92fr_1.08fr]">
        <aside class="rounded-3xl border border-slate-200/80 bg-white/90 p-8 shadow-sm shadow-slate-200/70">
          <p class="text-xs font-semibold uppercase tracking-[0.16em] text-cyan-700">{contactCopy.aside.kicker}</p>
          <h1 class="mt-3 text-4xl text-slate-900 sm:text-5xl">{contactCopy.aside.title}</h1>
          <p class="mt-5 max-w-lg text-slate-600">{contactCopy.aside.description}</p>

          <div class="mt-8 space-y-4 text-slate-600">
            <p>
              <span class="font-semibold text-slate-900">{contactCopy.aside.emailLabel}</span>
              <span> hola@orbitweb.studio</span>
            </p>
            <p>
              <span class="font-semibold text-slate-900">{contactCopy.aside.phoneLabel}</span>
              <span> +34 910 123 456</span>
            </p>
            <p>
              <span class="font-semibold text-slate-900">{contactCopy.aside.scheduleLabel}</span>
              <span> {contactCopy.aside.scheduleValue}</span>
            </p>
          </div>
        </aside>

        <form class="rounded-3xl border border-slate-200/80 bg-white p-6 shadow-lg shadow-slate-200/70 sm:p-8">
          <div class="grid gap-5 sm:grid-cols-2">
            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700">{contactCopy.form.name}</span>
              <input
                type="text"
                name="nombre"
                required
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100"
                placeholder={contactCopy.form.namePlaceholder}
              />
            </label>

            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700">{contactCopy.form.company}</span>
              <input
                type="text"
                name="empresa"
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100"
                placeholder={contactCopy.form.companyPlaceholder}
              />
            </label>
          </div>

          <div class="mt-5 grid gap-5 sm:grid-cols-2">
            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700">{contactCopy.form.email}</span>
              <input
                type="email"
                name="email"
                required
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100"
                placeholder="tu@email.com"
              />
            </label>

            <label class="flex flex-col gap-2">
              <span class="text-sm font-semibold text-slate-700">{contactCopy.form.phone}</span>
              <input
                type="tel"
                name="telefono"
                class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100"
                placeholder="+34 600 000 000"
              />
            </label>
          </div>

          <label class="mt-5 flex flex-col gap-2">
            <span class="text-sm font-semibold text-slate-700">{contactCopy.form.service}</span>
            <select
              name="servicio"
              class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100"
            >
              {contactCopy.form.serviceOptions.map((serviceOption) => <option>{serviceOption}</option>)}
            </select>
          </label>

          <ContactBudgetEstimatorIsland client:visible copy={contactCopy.budget} />

          <ContactScheduleSelectorIsland client:load copy={contactCopy.schedule} />

          <label class="mt-5 flex flex-col gap-2">
            <span class="text-sm font-semibold text-slate-700">{contactCopy.form.message}</span>
            <textarea
              name="mensaje"
              rows={5}
              required
              class="rounded-xl border border-slate-300 px-4 py-3 text-sm text-slate-800 outline-none transition focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100"
              placeholder={contactCopy.form.messagePlaceholder}
            ></textarea>
          </label>

          <button
            type="submit"
            class="mt-6 inline-flex items-center justify-center rounded-full bg-slate-900 px-7 py-3 text-sm font-semibold text-white transition hover:bg-slate-800"
          >
            {contactCopy.form.submit}
          </button>
        </form>
      </div>
    </section>
  </main>

  <SiteFooter lang="fr" copy={fr.footer} />
</BaseSiteLayout>


